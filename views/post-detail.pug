extends layout

block page_css
  //- link(rel='stylesheet', href='/css/lightslider.min.css')
  link(rel='stylesheet', href='/plugins/datatables/dataTables.bootstrap.css')
  link(rel='stylesheet', href='/css/pages/home.css')

block content
  section.content
    .row
      .col-md-12
        .box.box-solid
          //- .box-header.with-border
            //- h3.box-title Horizontal Form
          // /.box-header
          // form start
          form.form-horizontal
          .box-body
            .form-group
              .col-md-1
                label
                  | Post Id
              .col-md-5
                input.form-control(type='text', placeholder='Id của bài viết')
              .col-md-3
                button.btn.btn-info(type='submit') Show
    .row
      .col-md-12
        .box.box-solid
          .box-body
            .col-md-2
              label
                | Chủ đề bài viết
            .col-md-4
              label
                | Chủ đề bài viết
            .col-md-2
              label
                | Thời gian
            .col-md-4
              label
                | Thời điểm đăng bài
    .row
      .col-md-12
        .box.box-solid
          .box-header.with-border
            i.fa.fa-text-width
            h3.box-title Nội dung bài viết
          .box-body
            dd Full nội dung của bài viết, Full nội dung của bài viết, Full nội dung của bài viết
                | Full nội dung của bài viết, Full nội dung của bài viết, Full nội dung của bài viết.
                | Full nội dung của bài viết, Full nội dung của bài viết, Full nội dung của bài viết.
                | Full nội dung của bài viết, Full nội dung của bài viết, Full nội dung của bài viết.
                | Full nội dung của bài viết, Full nội dung của bài viết, Full nội dung của bài viết.
    .row
      .col-md-12
        .box.box-solid
          .box-body
            .col-md-2
              label | Comments
              label | 12
            .col-md-2
              label | Likes
              label | 20
            .col-md-2
              label | Shares
              label | 10
            .col-md-6
              label | Reaction
              label | Like
              label | 10
              label | Love
              label | 12
              label | Sad
              label | 2
              label | Angry
              label | 1
    .row
      .col-md-12
        .box.box-solide
          .box-header.with-border
            h3.box-title Thống kê các bài viết trên facebook
          .box-body
            table#postDetail.table.table-bordered.table-striped.dataTable(role="grid")
              thead
                tr
                  th User
                  th Comment
                  th Positive
                  th Neutral
                  th Negative
                  th Related
                  th Time

block page_script
